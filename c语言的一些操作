int input = 0;
void game()
{
	
	int random_num = rand() % 100 + 1;
	while (1)
	{
		printf("请输入您猜的数字");
		scanf("%d", &input);
		if (input > random_num)
		{
			printf("猜大了\n");
		}
		else if (input < random_num)
		{
			printf("猜小了");
		}
		else
		{
			printf("恭喜你猜对了");
			break;
		}
	}
}
